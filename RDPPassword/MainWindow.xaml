<Window
    x:Class="RDPPassword.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RDPPassword"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    Title="RDPPassword"
    Width="600"
    Height="400"
    ui:TitleBar.Height="36"
    ui:TitleBar.IsIconVisible="True"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    ResizeMode="CanMinimize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid x:Name="GridRoot" Loaded="GridRoot_Loaded">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid
            x:Name="GridMain"
            Grid.Row="0"
            Margin="0,0,0,0">
            <TextBox
                x:Name="TextBoxMain"
                Margin="12,6,12,0"
                FontFamily="Consolas"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                TextWrapping="Wrap" />

        </Grid>

        <Grid
            x:Name="GridBottom"
            Grid.Row="1"
            Height="54"
            Margin="0,0,0,0"
            VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                x:Name="TextBlockInfo"
                Grid.Column="0"
                Margin="14,0,0,0"
                VerticalAlignment="Center"
                Foreground="Gray"
                Text="[Info]" />

            <Button
                x:Name="ButtonClear"
                Grid.Column="2"
                Margin="0,0,12,12"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Click="ButtonClear_Click"
                ToolTip="Clear">
                <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.EraseTool}" />
            </Button>
            <Button
                x:Name="ButtonCopy"
                Grid.Column="3"
                Margin="0,0,12,12"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Click="ButtonCopy_Click"
                ToolTip="Copy">
                <ui:FontIcon x:Name="IconButtonCopy" Icon="{x:Static ui:SegoeFluentIcons.Copy}" />
            </Button>
            <Button
                x:Name="ButtonEncrypt"
                Grid.Column="4"
                Margin="0,0,12,12"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Content="Encrypt" />
            <Button
                x:Name="ButtonDecrypt"
                Grid.Column="5"
                Margin="0,0,12,12"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Content="Decrypt" />

        </Grid>

    </Grid>
</Window>
